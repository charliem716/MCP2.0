{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false
  },
  "include": [
    "tests/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}