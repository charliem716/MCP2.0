# =============================================================================
# MCP Voice/Text-Controlled Q-SYS Demo - Environment Variables
# =============================================================================

# Node.js Environment
NODE_ENV=development
PORT=443
LOG_LEVEL=info

# =============================================================================
# Q-SYS Core Configuration
# =============================================================================
QSYS_HOST=192.168.1.100
QSYS_PORT=443
QSYS_USERNAME=admin
QSYS_PASSWORD=admin
QSYS_RECONNECT_INTERVAL=5000
QSYS_HEARTBEAT_INTERVAL=30000

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-...
OPENAI_ORGANIZATION=org-...
OPENAI_MODEL=gpt-4
OPENAI_VOICE=nova

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_STDIO=true
MCP_SERVER_TIMEOUT=30000
MCP_SERVER_LOG_LEVEL=info

# =============================================================================
# API Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=443
API_CORS_ORIGINS="*"
API_MAX_REQUEST_SIZE=10mb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-here
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# WebSocket Configuration
# =============================================================================
WS_PORT=443
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# =============================================================================
# Voice Processing Configuration
# =============================================================================
VOICE_SAMPLE_RATE=16000
VOICE_CHANNELS=1
VOICE_BUFFER_SIZE=4096
VOICE_MAX_DURATION=30000

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_VOICE=true
ENABLE_HISTORY_PERSISTENCE=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGGING=false

# =============================================================================
# Storage Configuration
# =============================================================================
MAX_HISTORY_LENGTH=1000
CACHE_TTL=3600000
CACHE_MAX_SIZE=1000

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_MAX_ENTRIES=1000
CACHE_TTL_MS=1800000
CACHE_MAX_MEMORY_MB=50

# =============================================================================
# Performance Configuration
# =============================================================================
TOOL_EXECUTION_WARNING_MS=1000
QSYS_CONNECTION_TIMEOUT=10000

# =============================================================================
# Additional Timeout Configuration
# =============================================================================
CHANGE_GROUP_TIMEOUT_MS=30000
COMPRESSION_COOLDOWN_MS=30000
CACHE_CLEANUP_INTERVAL_MS=300000
VALIDATION_CACHE_TTL_MS=30000

# =============================================================================
# Development Configuration
# =============================================================================
DEV_AUTO_RELOAD=true
DEV_MOCK_QSYS=false
DEV_MOCK_OPENAI=false

# =============================================================================
# Production Configuration
# =============================================================================
# Uncomment these for production deployment
# HTTPS_CERT_PATH=/path/to/cert.pem
# HTTPS_KEY_PATH=/path/to/key.pem
# HTTPS_CA_PATH=/path/to/ca.pem

# =============================================================================
# Monitoring & Logging
# =============================================================================
METRICS_PORT=9090
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Log Configuration
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD-HH

# =============================================================================
# Testing Configuration
# =============================================================================
TEST_QSYS_HOST=localhost
TEST_QSYS_PORT=8443
TEST_TIMEOUT=10000
TEST_COVERAGE_THRESHOLD=80
