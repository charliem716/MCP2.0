{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.mjs",
    "src/**/*.json",
    "tests/**/*",
    "scripts/**/*",
    "*.ts",
    "*.mts",
    "*.mjs",
    "*.js",
    "*.cjs",
    "jest.config.ts",
    "eslint.config.mjs",
    "src/mcp/state/event-cache/__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "debug-*.ts",
    "verify-*.cjs"
  ]
}
