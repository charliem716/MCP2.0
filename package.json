{
  "name": "mcp-voice-text-qsys",
  "version": "1.0.0",
  "description": "MCP Voice/Text-Controlled Q-SYS Demo - AI-powered voice and text control for Q-SYS audio systems",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "qsys-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:mcp": "node mcp-server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.e2e.ts",
    "test:backup": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.integration.ts",
    "test:coverage:measure": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --coverageThreshold='{}' --passWithNoTests || true",
    "test:coverage:event-cache": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --coverageThreshold='{}' --testPathPattern=event-cache --passWithNoTests || true",
    "lint": "eslint . --ext .ts,.js,.test.ts",
    "lint:fix": "eslint . --ext .ts,.js,.test.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:tests": "tsc --noEmit -p tsconfig.test.json",
    "clean": "rm -rf dist",
    "prepare": "husky install",
    "test:mcp:live": "npm run build && node tests/manual/test-mcp-tools-live.test.ts",
    "test:connection": "node tests/integration/qsys/test-connection.test.ts",
    "test:mcp": "node tests/functional/mcp-control-test.js",
    "test:validation": "node tests/functional/test-control-validation.test.ts",
    "backup": "tsx src/cli/backup.ts",
    "backup:create": "tsx src/cli/backup.ts backup",
    "backup:list": "tsx src/cli/backup.ts list",
    "backup:restore": "tsx src/cli/backup.ts restore"
  },
  "keywords": [
    "mcp",
    "qsys",
    "voice-control",
    "text-control",
    "ai",
    "openai",
    "websocket",
    "audio",
    "control",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@openai/agents": "^0.0.15",
    "@q-sys/qrwc": "^0.4.1-beta",
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "jsonwebtoken": "^9.0.2",
    "qsys-qrc-client": "^0.1.1",
    "winston": "^3.11.0",
    "ws": "^8.18.0",
    "zen-observable": "^0.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@types/better-sqlite3": "^7.6.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.9",
    "@types/ws": "^8.5.10",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
