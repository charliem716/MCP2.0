{
  "name": "mcp-voice-text-qsys",
  "version": "1.0.0",
  "description": "MCP Voice/Text-Controlled Q-SYS Demo - AI-powered voice and text control for Q-SYS audio systems",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:measure": "jest --coverage --coverageThreshold='{}' --passWithNoTests || true",
    "test:coverage:event-cache": "jest --coverage --coverageThreshold='{}' --testPathPattern=event-cache --passWithNoTests || true",
    "lint": "eslint . --ext .ts,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:tests": "tsc --noEmit -p tsconfig.test.json",
    "clean": "rm -rf dist",
    "prepare": "husky install",
    "test:mcp:live": "npm run build && node tests/manual/test-mcp-tools-live.mjs",
    "test:connection": "node tests/integration/qsys/test-connection.mjs",
    "test:mcp": "node tests/functional/mcp-control-test.js",
    "test:validation": "node tests/functional/test-control-validation.mjs"
  },
  "keywords": [
    "mcp",
    "qsys",
    "voice-control",
    "text-control",
    "ai",
    "openai",
    "websocket",
    "audio",
    "control",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@openai/agents": "^0.0.12",
    "@q-sys/qrwc": "^0.4.1-beta",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "qsys-qrc-client": "^0.1.1",
    "winston": "^3.11.0",
    "ws": "^8.18.0",
    "zen-observable": "^0.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "eslint": "^9.15.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.15.0"
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
